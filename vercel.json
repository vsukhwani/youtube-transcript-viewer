{
  "version": 2,
  "buildCommand": "bash build.sh",
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" },
    { "src": "frontend/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/debug", "dest": "/frontend/debug.html" },
    { "src": "/", "dest": "/frontend/index.html" },
    { "src": "/(.*)\\.(.+)", "dest": "/frontend/$1.$2" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "env": {
    "PYTHONPATH": "."
  }
}
