{
  "version": 2,
  "name": "transcript-viewer-vs2025",
  "buildCommand": "echo 'No build required for static frontend'",
  "outputDirectory": "frontend",
  "functions": {
    "api/*.py": {
      "runtime": "@vercel/python@4.2.0"
    }
  },
  "routes": [
    {
      "src": "/api/transcript",
      "dest": "/api/transcript.py"
    },
    {
      "src": "/api/languages", 
      "dest": "/api/languages.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "ENVIRONMENT": "production"
  }
}
